<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_zero_count"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_circl" />

                <TextView
                    android:id="@+id/tv_circle_wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0 wins"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />
            </LinearLayout>


            <Button
                android:id="@+id/bt_play_again_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DF4524  "
                android:padding="20dp"
                android:text="Play Again"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/iv_cross_count"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_cross" />

                <TextView
                    android:id="@+id/tv_x_wins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0 Wins"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_play_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draw Match"
                android:textSize="20dp"
                android:padding="25dp"/>

            <Button
                android:id="@+id/bt_play_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DF4524  "
                android:padding="20dp"
                android:text="Play Again"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true">


        <FrameLayout
            android:id="@+id/fl_036"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/margin_color"
            android:visibility="gone">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_258"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/margin_color_right"
            android:visibility="gone">

        </FrameLayout>

