                        android:padding="25dp"

                        android:tag="1" />

                    <ImageView
                        android:id="@+id/tv_02"
                        android:layout_width="match_parent"
                        android:layout_height="113dp"
                        android:layout_weight="1"
                        android:onClick="dropIn"
                        android:padding="25dp"

                        android:tag="2" />

                </LinearLayout>

                <LinearLayout
