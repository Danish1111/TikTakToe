                        android:padding="25dp"
                        android:tag="4" />

                    <ImageView
                        android:id="@+id/tv_12"
                        android:layout_width="match_parent"
                        android:layout_height="113dp"
                        android:layout_column="2"
                        android:layout_row="0"

                        android:layout_weight="1"
                        android:onClick="dropIn"
