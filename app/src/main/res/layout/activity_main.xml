<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <com.example.abc.tictaktoelight.MaterialRippleLayout
                android:layout_width="wrap_content"
                app:mrl_rippleOverlay="true"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/ll_theme"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/iv_change_theme"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/cobalt_black"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:text="Theme"
                        android:textSize="21sp" />



                </LinearLayout>

            </com.example.abc.tictaktoelight.MaterialRippleLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </TextView>


            <!--<TextView-->
            <!--android:gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="Hello" />-->

            <!--<view-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"/>-->

            <com.example.abc.tictaktoelight.MaterialRippleLayout
                android:layout_width="wrap_content"
                app:mrl_rippleOverlay="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/ll_setting"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/cobalt_black"
                        android:background="@drawable/ic_more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:text="More"
                        android:textSize="21sp" />



                </LinearLayout>


            </com.example.abc.tictaktoelight.MaterialRippleLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.example.abc.tictaktoelight.MaterialRippleLayout
                android:layout_width="wrap_content"
                app:mrl_rippleOverlay="true"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/auction_background_orange_new"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:text="Local Player"
                    android:textSize="21sp" />


            </com.example.abc.tictaktoelight.MaterialRippleLayout>
            <com.example.abc.tictaktoelight.MaterialRippleLayout
                android:layout_width="wrap_content"
                app:mrl_rippleOverlay="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_computer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/auction_background_orange_new"
                    android:textColor="@color/white"
                    android:text="VS Computer"
                    android:textSize="21sp" />
            </com.example.abc.tictaktoelight.MaterialRippleLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.abc.tictaktoelight.MaterialRippleLayout
            android:layout_width="0dp"
            app:mrl_rippleOverlay="true"
            android:layout_margin="5dp"

            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_rate"
                android:gravity="center"
                android:background="@drawable/counter_rectangle_shape_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="@color/cobalt_black"
                    android:background="@drawable/ic_like" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="Rate"
                    android:textSize="21sp" />
            </LinearLayout>

        </com.example.abc.tictaktoelight.MaterialRippleLayout>


        <com.example.abc.tictaktoelight.MaterialRippleLayout
            app:mrl_rippleOverlay="true"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:background="@drawable/counter_rectangle_shape_gray"

            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_share"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:tint="@color/cobalt_black"
                    android:background="@drawable/ic_share" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="Share"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
            </LinearLayout>

        </com.example.abc.tictaktoelight.MaterialRippleLayout>



        <!--<LinearLayout-->
            <!--android:gravity="center"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:background="@drawable/ic_superman" />-->


            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="5dp"-->
                <!--android:text="Theme"-->
                <!--android:textSize="15sp" />-->
        <!--</LinearLayout>-->



    </LinearLayout>

</RelativeLayout>
